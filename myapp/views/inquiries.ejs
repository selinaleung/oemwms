<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- javascripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!--<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.10/js/jquery.dataTables.js"></script> -->
    <script src="/javascripts/index.js"></script>

    <!-- css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.10/css/jquery.dataTables.css"> -->
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table class="table table-hover table-bordered" id="inquiries_table">
    	<thead>
	    	<tr>
	    		<th> Inquiry # </th>
	    		<th> Date </th>
	    		<th> Issue </th>
	    		<th> Solution </th>
	    		<th> Notes </th> 
	    		<th> Order # </th>
	    	</tr>
	    </thead>
	    <tbody>
	    	<% for (var i = 0; i < inquiries.length; ++i ) { %>
		    	<tr>
		    		<td> 4 </td>
		    		<td> 4/5/6 </td>
		    		<td> Order still hasn't arrived </td>
		    		<td> It hasn't been 4 business days </td>
		    		<td> They are mean </td> 
		    		<td> 123123123 </td>
		    	</tr>
	    	<% } %>
	    </tbody>
    </table>

    <form method="post" action="/customer/add" data-toggle="validator">
    	<div class="form group">
    		<label for="issue"> Issue:</label>
    		<input type="text" class="form-control" name="issue" id="issue" required></input>
    	</div>
    	<div class="form group">
    		<label for="solution"> Solution:</label>
    		<input type="text" class="form-control" name="solution" id="solution"></input>
    	</div>
    	<div class="form group">
    		<label for="notes"> Notes:</label>
    		<input type="text" class="form-control" name="notes" id="notes"></input>
    	</div>
    	<div class="form group">
    		<label for="order_num"> Order #</label>
    		<input type="number" class="form-control" name="order_num" id="order_num"></input>
    	</div>
    	<button type="submit" class="btn btn-default">Submit</button>
    	<input type="hidden" name="customer_id" value =<% customer_id %>></input>
    </form>
  </body>
</html>
